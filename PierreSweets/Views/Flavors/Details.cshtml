@{
  Layout = "_Layout";
}

@using PierreSweets.Models
@model PierreSweets.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)<h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor does not have any treats yet!</p>
}
else
{
  <h4>This flavor has the following treats:</h4>
  <ul>
    @foreach(TreatFlavor join in Model.JoinEntities)
    {
      <li>Treats: @join.Treat.Name, Genre: @join.Treat.Description</li>
      @using (Html.BeginForm("DeleteJoin", "Flavors"))
      {
        @Html.Hidden("joinId", @join.TreatFlavorId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

<p>@Html.ActionLink("Edit Item", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Item", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Add a book", "AddBook", new { id = Model.FlavorId })</p>